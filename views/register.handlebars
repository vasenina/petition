<h2>Register here and join happy people</h2>
<p>We are here to be happy!😁</p>
{{#if error}}

    <p class="error">Something is wrong</p>
    {{#if error.email}}
        <p class="error">Your email is already exists.
            <a href="/login">Log in here</a></p>{{/if}}
{{/if}}
<form method="POST" id="registerform">
    <label for="ulast">LastName: </label>
    <input type="text" id="ulast" name="last" required />
    <label for="ufirst">FirstName: </label>
    <input type="text" id="ufirst" name="first" required />
    <label for="uemail">Email: </label>
    <input type="email" id="uemail" name="email" required />
    <label for="upassword">Password: </label>
    <input type="password" id="upassword" name="password" required />
    <button type="submit">Register</button>
</form>
<p>If you are already registered please <a href="/login">log in here</a></p>