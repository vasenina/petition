{{#if byCity}}
    <h2>The happiest people from {{cityName}}</h2>

{{else}}
    <h2>The happiest people</h2>
{{/if}}

<ul>
    {{#each signers}}
        <li><span class="emj">{{emj}}</span>
            {{#if url}}<a href={{url}}>{{first}} {{last}}</a>
            {{else}}
                {{first}}
                {{last}}
            {{/if}}
            {{age}}
            <a href="/signers/{{city}}">
                {{city}}</a>
        </li>
    {{/each}}

</ul>
{{#if byCity}}
    <a href="/signers">See all {{signersCount}} happy people</a>
{{/if}}